<resources>

    <style name="AppTheme"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="CardView.Light.Message"
        parent="CardView.Light">
        <item name="background">?colorSecondary</item>
        <item name="cardCornerRadius">@dimen/margin_big</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/margin_normal</item>
        <item name="cardBackgroundColor">@color/secondaryColor</item>
    </style>
</resources>
